<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:background="@raw/lakebg">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/missionLayout"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Kotiteksti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Debug for different mission options"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/missionLayout"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="20dp">


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:id="@+id/GeneratedMissionGrid"
            android:animateLayoutChanges="true">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/mission1"
                android:visibility="gone"
                android:background="@drawable/mission_view_easy"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/mission2"
                android:visibility="gone"
                android:background="@drawable/mission_view_easy"
                android:padding="5dp"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/mission3"
                android:visibility="gone"
                android:background="@drawable/mission_view_easy"
                android:padding="5dp"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/mission4"
                android:visibility="gone"
                android:background="@drawable/mission_view_easy"
                android:padding="5dp"/>
        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DatabaseData"
            android:visibility="gone"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/OpenDBEdit"
            android:text="Open DB edit View"
            android:background="#8B0000"
            android:padding="5dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resetScore"
            android:text="Reset score"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/showDatabase"
            android:text="Show Database"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ShowSharedPref"
            android:text="Show Current Mission"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/completeMissionButton"
            android:text="Complete Mission"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textFromPref"/>


    </LinearLayout>
</RelativeLayout>

</ScrollView>